generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ifms {
  id        String   @id @default(uuid())
  ra        String   @unique
  name      String
  cpf       String   @unique
  born_date DateTime
  user      user?
}

model user {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  password   String
  avatar_url String?
  is_admin   Boolean @default(false)
  ifms       ifms    @relation(fields: [ifms_id], references: [id])
  ifms_id    String  @unique
  wallet     wallet?
}

model wallet {
  id      String @id @default(uuid())
  money   Int
  user    user   @relation(fields: [user_id], references: [id])
  user_id String @unique
}

model item {
  id         String       @id @default(uuid())
  name       String
  price      Int
  type       ItemCategory
  avatar_url String
}

enum ItemCategory {
  DRINK
  FOOD
}
