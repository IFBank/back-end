generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ifms {
  id        String   @id @default(uuid())
  ra        String   @unique
  name      String
  cpf       String   @unique
  born_date DateTime
  user      user?
}

model user {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  password   String
  avatar_url String?
  is_admin   Boolean @default(false)
  ifms       ifms    @relation(fields: [ifms_id], references: [id])
  ifms_id    String  @unique
  wallet     wallet?
}

model wallet {
  id      String   @id @default(uuid())
  money   Int
  user    user     @relation(fields: [user_id], references: [id])
  user_id String   @unique
  combos  combos[]
}

model item {
  id          String        @id @default(uuid())
  name        String
  price       Float
  type        ItemCategory
  avatar_url  String?
  shop_item   shop_item?
  combos_item combos_item[]
}

enum ItemCategory {
  DRINK
  FOOD
}

model shop_item {
  id      String @id @default(uuid())
  item_id String @unique
  item    item   @relation(fields: [item_id], references: [id])
  amount  Int
}

model combos {
  id          String        @id @default(uuid())
  wallet_id   String
  wallet      wallet        @relation(fields: [wallet_id], references: [id])
  name        String
  combos_item combos_item[]
}

model combos_item {
  id        String @id @default(uuid())
  combos_id String
  combo     combos @relation(fields: [combos_id], references: [id])
  item_id   String
  item      item   @relation(fields: [item_id], references: [id])
  amount    Int
}
